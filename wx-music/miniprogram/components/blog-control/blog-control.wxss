/* components/blog-control/blog-control.wxss */

.ctrl {
  display: flex;
  align-items: center;
  background-color: #fff;
  height: 100%;
}

.ctrl-item {
  flex: 1;
  text-align: center;
  color: rgba(40, 47, 60, 0.8);
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.ctrl-item .icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.comment-content {
  text-align: left;
  padding: 20rpx;
}

.slot-container {
  position: relative;
}

.comment-button {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  background-color: #d43c33;
  z-index: 9;
}

.crl-btn{
  background-color: #fff;
  color:rgba(40,47,60,0.6);
  padding: 0;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}