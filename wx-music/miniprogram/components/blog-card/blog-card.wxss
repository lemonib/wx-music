/* components/blog-card/blog-card.wxss */
.blog {
  padding: 20rpx;
  background-color: #fff;
}

.blog-title {
  display: flex;
}

.blog-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.blog-img {
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  justify-content: flex-start
}

.blog-content{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
}
.img {
  flex: none ;
  width: 30%;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}