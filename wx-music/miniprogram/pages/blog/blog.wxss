/* pages/blog/blog.wxss */

page {
  background-color: #f1f1f1;
}

.header {
  display: flex;
  align-content: center;
  padding: 0 20rpx;
  background-color: #fff;
  height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 99;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.header .icon-fabu {
  font-size: 48rpx;
}

.publish-container {
  width: 68rpx;
  height: 68rpx;
  display: flex;
  align-content: center;
  justify-content: center;
  padding-top: 22rpx;
}

.header .icon-fabu:hover {
  color: #c43d33;
}

.search-container {
  flex: 1;
  padding-top: 15rpx;
}

.blog-list {
  margin-top: 120rpx;
}

.blog-panel {
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}