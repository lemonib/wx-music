/* pages/blog-edit/blog-edit.wxss */

.container{
  padding: 20rpx;
}

.content{
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
}

.footer{
  display: flex;
  align-content: center;
  position: fixed;
  bottom: 0;
  padding:20rpx;
  width: 100%;
  box-sizing: border-box;
  background: #f1f1f1;
}

.word-num{
  flex:6;
  text-align: right;
  color:#474747;
  font-size: 32rpx;
  padding-right: 30rpx;
  line-height: 32rpx;
}

.send-btn{
  flex: 1;
  background-color: #d43c33;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
}

/* 图片样式 */

.image-list{
  display: flex;
  flex-wrap: wrap;
  margin-top: 20px;
}

.image-wrap{
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  border: 1px #474747 dotted;
}

.img{
  width: 100%;
  height: 100%;
}

.icon-iconfontadd{
  text-align: center;
  width: 50%;
  height: 80%;
}
.icon-shanchu{
  position: absolute;
  top:0;
  right:0;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: 400;
}